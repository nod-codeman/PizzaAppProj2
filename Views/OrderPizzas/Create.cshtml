                    @*<div>
                            <button align="right" type="submit" id="MusAdd" onclick="addMushroom();" class="btn btn-danger">Add Order</button>
                        </div>*@
                </div>
            </div>
        </div>
    </div>

    <div>
        <span>Total Price: $</span>
        <input type="text" id="totP" name="fname">
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-danger" />
    </div>
</form>

